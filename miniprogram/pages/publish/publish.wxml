<!--pages/publish/publish.wxml-->
<van-cell-group>
  <van-field
    value="{{name}}"
    left-icon="edit"
    label="任务名称"
    placeholder="请输入任务名称"
    bind:click-icon="onClickIcon"
  /><van-field
    value="{{ message }}"
    left-icon="label-o"
    label="任务简介"
    type="textarea"
    placeholder="请输入任务简介"
    autosize
    border="{{ false }}"
  />
  <van-field
    value="{{money}}"
    type="number"
    left-icon="bill-o"
    label="任务金额"
    placeholder="请输入任务金额（RMB）"
    bind:click-icon="onClickIcon"
  />
 <van-field
    value="{{phone}}"
    type="number"
    left-icon="phone-o"
    label="联系方式"
    placeholder="请输入联系方式（仅接受者可见）"
    bind:click-icon="onClickIcon"
  />
  <van-datetime-picker
  type="datetime"
  title="任务ddl"
  value="{{ currentDate }}"
  min-date="{{ minDate }}"
  max-date="{{ maxDate }}"
  bind:input="onInput"
/>
</van-cell-group>
<text>起点</text>
<van-radio-group value="{{ radio }}" disabled bind:change="onChange">
  <van-radio name="1">仙林</van-radio>
  <van-radio name="2">鼓楼</van-radio>
</van-radio-group>
<text>终点</text>
<van-radio-group value="{{ radio }}" disabled bind:change="onChange">
  <van-radio name="1">仙林</van-radio>
  <van-radio name="2">鼓楼</van-radio>
</van-radio-group>
<text>任务类型</text>
<van-radio-group value="{{ radio }}" disabled bind:change="onChange">
  <van-radio name="1">取送物件</van-radio>
  <van-radio name="2">事情应答</van-radio>
  <van-radio name="3">其他</van-radio>
</van-radio-group>
<button class='w' size="small" type="primary" >
发布
</button>